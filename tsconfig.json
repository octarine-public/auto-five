{
	"compilerOptions": {
		"target": "esnext",
		"module": "ESNext",
		"moduleResolution": "Classic",
		"rootDir": "../../../",
		"baseUrl": "../../../",
		"noEmit": true,
		"noUnusedLocals": true,
		"strict": true,
		"alwaysStrict": true,
		"experimentalDecorators": true,
		"lib": [
			"ESNext"
		]
	},
	"include": [
		"./**/*.ts",
		"../../../**/*.d.ts"
	],
	"exclude": [
		"wrapper_autogen/**/*",
		"node_modules/**/*",
		"scripts_files/**/*"
	],
	"compileOnSave": true,
	"forceConsistentCasingInFileNames": true
}