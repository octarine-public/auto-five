{
	"compilerOptions": {
		"target": "esnext",
		"module": "ES2022",
		"moduleResolution": "Node",
		"rootDir": "../../../",
		"baseUrl": "../../../",
		"noEmit": true,
		"noUnusedLocals": true,
		"strict": true,
		"outDir": "scripts",
		"alwaysStrict": true,
		"experimentalDecorators": true,
		"lib": [
			"ESNext"
		],
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"./**/*.ts",
		"../../../**/*.d.ts"
	],
	"exclude": [
		"../../octarine-web/*",
		"node_modules/**/*",
		"scripts_files/**/*"
	],
	"compileOnSave": true
}